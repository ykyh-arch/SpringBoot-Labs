<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>cn.iocoder.springboot.labs</groupId>
        <artifactId>lab-12-maven-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>maven-plugin-test</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>cn.iocoder.springboot.labs</groupId>
                <artifactId>demo-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>demo plugin test</id>
                        <!--生命周期阶段-->
                        <phase>pre-clean</phase>
                        <goals>
                            <goal>demo</goal>
                        </goals>
                        <!--目标参数配置-->
                        <configuration>
                            <myBoolean>true</myBoolean>
                            <myInteger>30</myInteger>
                            <myFile>${project.basedir}</myFile>
                            <myColor>BLUE</myColor>
                            <myArray>
                                <array>maven</array>
                                <array>spring</array>
                                <array>mybatis</array>
                                <array>springboot</array>
                                <array>springcloud</array>
                            </myArray>
                            <myList>
                                <list>30</list>
                                <list>35</list>
                            </myList>
                            <myMap>
                                <name>路人甲Java</name>
                                <age>30</age>
                            </myMap>
                            <myProperties>
                                <property>
                                    <name>name</name>
                                    <value>javacode2018</value>
                                </property>
                                <property>
                                    <name>age</name>
                                    <value>30</value>
                                </property>
                            </myProperties>
                            <person>
                                <name>路人甲Java</name>
                                <age>32</age>
                            </person>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--将目标构件打包为可以执行jar包到target目录-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>cn.iocoder.springboot.labs.Main</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!--校验：mvn pre-clean -pl :maven-plugin-test -Dgreeting="欢迎和【路人甲Java】一起学习Maven!"-->
    <!--实现打包之后自动运行：mvn clean cn.iocoder.springboot.labs:demo-maven-plugin:run -pl maven-plugin-test-->

</project>